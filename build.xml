<?xml version="1.0"?>
<project name="RedBlackTree" basedir="." default="build">
	<property name="src.dir" value="src"/>
	<property name="build.dir" value="out"/>
	<property name="doc.dir" value="out/doc"/>

	<target name="init" description="Clean output directories and recreate directories">
		<delete includeemptydirs="true">
			<fileset dir="${build.dir}" includes="**/*"/>
		</delete>
		<mkdir dir="${build.dir}/doc"/>
	</target>

	<target name="build" description="Compile project and generate JavaDoc" depends="init">
		<javac destdir="${build.dir}" includeantruntime="false">
			<src path="${src.dir}"/>
			<classpath path="${src.dir}/app/exercise/visualtree/RedBlackTreeDrawer.jar"/>
		</javac>
		<javadoc
			sourcepath="${src.dir}"
			destdir="${doc.dir}"
			author="true"
			version="true"
			use="true"
			Private="true"
			Encoding="UTF-8"
			charset="UTF-8"
			docencoding="UTF-8"
			windowtitle="APP - RedBlackTree">
		</javadoc>
	</target>

</project>
